{
  "name": "bot",
  "version": "1.0.0",
  "description": "Bot - Prediction market arbitrage detection tool",
  "type": "module",
  "main": "src/index.tsx",
  "bin": {
    "bot": "./src/index.tsx"
  },
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun --watch run src/index.tsx",
    "build": "bun run scripts/build.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f timescaledb"
  },
  "dependencies": {
    "@opentui/solid": "^0.1.69",
    "dotenv": "^17.2.3",
    "postgres": "^3.4.8",
    "solid-js": "^1.9.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
