    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@opentui/solid": "^0.1.69",
    "dotenv": "^17.2.3",
    "solid-js": "^1.9.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  }
}
